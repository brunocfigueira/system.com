            easyloader.locale = 'br';
            //impede de submeter o formulario ou pagina atraves da tecla enter
            $('input').keypress(function (e) {
                var code = null;
                code = (e.keyCode ? e.keyCode : e.which);                
                return (code == 13) ? false : true;
            });
        })
